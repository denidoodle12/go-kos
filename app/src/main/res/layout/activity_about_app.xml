<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.profile.aboutApp.AboutAppActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
        app:popupTheme="?attr/actionBarPopupTheme">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/toolbar_title_main_appcompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figtree_semibold"
                android:text="@string/txt_aboutApp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/toolbar_subtitle_main_appcompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figtree_regular"
                android:text="@string/txt_aboutApp_info"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/linear1"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gokosiconapp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/figtree_semibold"
                android:text="@string/txt_about_app"
                android:textSize="30sp"
                android:textColor="@color/black"
                tools:layout_gravity="center" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figtree_regular"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/txt_desc_about_app" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/figtree_semibold"
                android:text="@string/txt_what_is_in_it"
                android:textSize="30sp"
                android:textColor="@color/black"
                tools:layout_gravity="center" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/notosans_regular"
                android:text="@string/txt_desc_what_is_in_it" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/txt_main_feature"
                android:textSize="30sp"
                android:fontFamily="@font/figtree_semibold"
                android:textColor="@color/black"
                tools:layout_gravity="center" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/onboardingstart" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/txt_gis"
                android:fontFamily="@font/figtree_medium"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="20sp"
                tools:layout_gravity="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/notosans_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/txt_desc_main_feature" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/gokosiconapp"
                android:scaleType="fitCenter"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/figtree_regular"
                android:textSize="14sp"
                android:text="Dapatkan Informasi Kos-Kosan Sesuai Preferensimu Hanya di Aplikasi GoKos."
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/figtree_semibold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="GOKOS"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_about_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/figtree_regular"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:text="TENTANG KAMI"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/figtree_semibold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="KEBIJAKAN"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/figtree_regular"
                android:textSize="14sp"
                android:text="KEBIJAKAN PRIVASI"
                android:textColor="@color/primary"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_terms_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/figtree_regular"
                android:textSize="14sp"
                android:text="SYARAT DAN KETENTUAN"
                android:textColor="@color/primary"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/figtree_semibold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="HUBUNGI KAMI"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_email_gokos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/figtree_regular"
                android:textSize="14sp"
                android:text="gokosapp@gmail.com"
                android:textColor="@color/primary"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_number_gokos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/figtree_regular"
                android:textSize="14sp"
                android:text="+62895610787820"
                android:textColor="@color/primary"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/primary"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/gokosiconapp_white"
            android:scaleType="fitCenter"
            android:layout_gravity="start|center_vertical"
            android:adjustViewBounds="true"/>

        <View
            android:id="@+id/vertical_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/lighter_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figtree_semibold"
                android:text="Made with Love"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figtree_light"
                android:text="Project Aplikasi Skripsi"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>